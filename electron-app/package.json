{
  "name": "catalyst-erp",
  "version": "1.0.0",
  "description": "Catalyst ERP - Company Admin Portal",
  "main": "main.js",
  "author": "Codenet",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.codenet.catalyst",
    "productName": "Catalyst ERP",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/bin/Release/net8.0/publish",
        "to": "backend",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "portable"
    }
  },
  "dependencies": {
    "express": "^4.21.0"
  },
  "devDependencies": {
    "electron": "^33.0.0"
  }
}
