{
  "expo": {
    "name": "Catalyst Driver",
    "slug": "Catalyst-driver",
    "scheme": "Catalyst-driver",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We use your location to show nearby orders and track deliveries.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "We use your location to track active deliveries."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["ACCESS_FINE_LOCATION", "ACCESS_COARSE_LOCATION", "ACCESS_BACKGROUND_LOCATION"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "We use your location to show nearby orders and track deliveries.",
          "locationAlwaysAndWhenInUsePermission": "We use your location to track active deliveries.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ]
  }
}
